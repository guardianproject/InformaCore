<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!--  Overlay Screen -->
  	<style name="Theme.CustomDialog" parent="@style/Theme.Sherlock.Dialog">
  		<item name="android:windowNoTitle">true</item>
  		<item name="windowNoTitle">true</item>
  		<item name="android:textAppearance">@style/P</item>
  	</style>
  	
  	<style name="OverlayActivity">
  	    <item name="android:background">#ff0a5587</item>
  	    <item name="android:textColor">#ffffffff</item>
  	</style>
  	
  	<!--  Main Menu -->
  	<style name="ButtonsMainMenu">
  	    <item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">0.25</item>
		<item name="android:background">@drawable/menu_button_selector</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textColor">#ff444444</item>
  	</style>
  	
  	<!--  Fonts -->
  	<style name="H1Holder">
  		<item name="android:background">#ff8fae22</item>   
  	</style>
  	
  	<style name="H1">
  	    <item name="android:paddingLeft">6dip</item>
  		<item name="android:paddingRight">6dip</item>
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textSize">24dip</item>
  	</style>
  	
  	<style name="H2">
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textSize">18dip</item>
  	</style>
  	
  	<style name="H3">
  	    <item name="android:textColor">#ff8fae22</item>
  	    <item name="android:textSize">16dip</item>
  	    <item name="android:paddingLeft">6dip</item>
  	    <item name="android:paddingRight">6dip</item>
  	</style>
  	
  	<style name="P" parent="@android:style/TextAppearance">
  	    <item name="android:textColor">#ffffffff</item>
  	</style>
  	
  	<!--  Buttons -->
  	<style name="Button_standard">
  	    <item name="android:textSize">14dip</item>
  	    <item name="android:background">@drawable/standard_button_selector</item>
  	    <item name="android:paddingLeft">4dip</item>
  	    <item name="android:paddingRight">4dip</item>
  	    <item name="android:paddingTop">8dip</item>
  	    <item name="android:paddingBottom">8dip</item>
  	    <item name="android:textColor">#ff444444</item>
  	</style>
  	
  	<!--  EditText -->
  	<style name="EditText_standard">
  	    <item name="android:background">@drawable/edit_text_background</item>
  	    <item name="android:textColor">#ffffffff</item>
  	    <item name="android:textColorHint">#ccffffff</item>
  	</style>
  	
  	<!--  Quick Action Animations  -->
  	<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
</resources>